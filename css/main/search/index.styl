/* Busca */
.search
    position: relative
    z-index: 20

.search__form
    position: relative
    display: flex
    align-items: center

.search__form .input-box
    display: flex
    flex: 1 1 auto
    align-items: center

.search__label
    flex: 0 0 auto
    margin-right: 1rem
    color: rgba(0, 0, 0, .5)

.search__label:empty
    display: none

.search__input
    flex: 1 1 auto
    border-radius: 3px 0 0 3px !important

.search__filter
    position: relative
    flex: 0 0 auto

.search__filter .label
    display: flex
    align-items: center
    padding: 0 1rem
    height: 2.75rem
    border-top: 1px solid rgba(0, 0, 0, .1)
    border-bottom: 1px solid rgba(0, 0, 0, .1)
    background: #fff
    color: rgba(0, 0, 0, .5)
    line-height: 2.75rem
    cursor: pointer

.search__filter .label:before
    margin-right: 1rem

    icon('\f0b0')

    color: rgba(0, 0, 0, .2)

.search__filter .label:hover, .search__filter .label:hover:before, .search__filter.filtered .label, .search__filter.filtered .label:before
    color: color1_bg

.search__filter select
    position: absolute
    top: 0
    left: 0
    width: 100%
    opacity: 0

.search__filter ul
    position: absolute
    display: none
    padding: .5rem
    max-width: 90vw
    width: 320px
    background: #fff
    box-shadow: 0 0 0 1px rgba(0, 0, 0, .1), 0 1rem 2rem -1rem rgba(0, 0, 0, .5)
    column-count: 2

.search__filter.drop--left ul
    left: 0

.search__filter.drop--right ul
    right: 0

.search__filter.drop--top ul
    top: 100%

.search__filter.drop--bottom ul
    bottom: 100%

.search__filter.on ul
    display: block

.search__filter li
    display: block
    padding: .5rem
    width: 100%
    color: rgba(0, 0, 0, .5)
    cursor: pointer
    transition: all 200ms ease-out
    break-inside: avoid-column
    page-break-inside: avoid

.search__filter li:hover
    color: color1_bg

.search__filter li.default
    display: block
    margin: .5rem -.5rem -.5rem
    padding: 1rem
    width: calc(100% + 1rem)
    border-top: 1px solid rgba(0, 0, 0, .1)
    column-span: all
    -moz-column-span: all

.search__filter li.default:hover
    background: color1_bg
    color: color1_font

.search__button
    flex: 0 0 auto
    border-radius: 0 3px 3px 0

.search__button span span
    display: flex
    align-items: center

.search__autocomplete
    position: absolute
    top: 100% !important

.search__autocomplete ul
    padding: 1rem
    background: #fff
    box-shadow: 0 0 0 1px rgba(0, 0, 0, .1), 0 1rem 2rem -1rem rgba(0, 0, 0, .5)

.search__autocomplete li
    cursor: pointer

.search__autocomplete li:hover
    color: color1_bg

.search__autocomplete li:not(:last-child)
    margin-bottom: 1rem

.search__autocomplete .amount
    padding-right: 1rem
    color: rgba(0, 0, 0, .5)

.search__hide
    display: none

.header .search
    flex: 1 1 auto
    margin-left: 1rem

@media (max-width: 35.5rem)
    .header .search
        z-index: 20
        flex: 0 0 auto
        margin-left: auto

    .header .search__button
        box-shadow: none

    .header .search__form .input-box
        display: none

    .header .search.on .search__form .input-box
        position: fixed
        top: 0
        left: 0
        z-index: 999
        display: block
        width: 100vw

    .header .search.on .search__input
        padding: 1rem 3.75rem 1rem 1rem
        width: 100%
        height: 3rem
        background: color1_bg
        box-shadow: none
        color: color1_font

    .header .search.on .search__input::-webkit-input-placeholder
        color: color1_font

    .header .search.on .search__input::-moz-placeholder
        color: color1_font

    .header .search.on .search__input:-ms-input-placeholder
        color: color1_font

    .header .search.on .search__input:-moz-placeholder
        color: color1_font

    .header .search__hide
        position: fixed
        top: .125rem
        right: .125rem
        z-index: 9999
        display: block
        background: none
        box-shadow: none