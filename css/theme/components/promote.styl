.promote
    padding: 50px 0

    &__list
        display: flex
        justify-content: space-between
        align-items: stretch
        margin: -10px

    &__item
        margin: 0 auto
        padding: 10px
        max-width: 100%
        width: 235px

    &__figure
        position: relative

        legend
            position: absolute
            top: 0
            left: 0
            z-index: 2
            padding: 15px
            max-width: calc(100% - 40px)
            width: 100%
            height: 100%
            text-transform: uppercase
            font-weight: bold
            font-size: 16px

    &__label
        padding-right: 40px

        a
            text-decoration: underline
            font-weight: regular
            font-size: 16px
            line-height: 1.5