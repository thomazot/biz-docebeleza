.logo
    .header &
        margin-bottom: 0

        img, svg
            height: 38px

    @media (max-width: 992px)
        .header &
            flex: 1
            min-width: 0

            img, svg
                margin: 0 auto
                max-width: none

        .scrolling .header &
            flex: 0 0 auto
            margin-right: 16px

            a
                overflow: hidden
                width: 36px

            img, svg
                width: auto
                height: 38px
