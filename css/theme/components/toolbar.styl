.toolbar
    padding: 30px 0

    @media (max-width: 992px)
        background: #f2f4f7
        box-shadow: 200px 0 0 #f2f4f7, -200px 0 0 #f2f4f7

    .amount, .limiter
        display: none

    .sorter
        &:before
            display: none

    .sort-by
        position: relative
        width: 100%
        height: 40px
        border: solid 1px #707070
        border-radius: 40px
        background: none

        &:after
            icon('\f054')

            position: absolute
            top: 50%
            right: 20px
            font-size: 10px
            transform: translateY(-50%) rotate(90deg)

        label
            display: none

        select
            padding: 0 25px
            width: 100%
            height: 100%
            border: 0
            background: none
            box-shadow: none
            color: color1_bg
            text-transform: none
            font-size: 11px
            appearance: none

    @media (min-width: 993px)
        position: static

        &:before
            position: absolute
            left: 0
            margin-top: -18px
            width: 100%
            height: 75px
            background: #EFEFEF
            content: ''