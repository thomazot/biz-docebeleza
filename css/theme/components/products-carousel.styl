.products-carousel
    &__title
        padding: 10px 0 0
        text-align: center
        font-weight: light
        font-size: 18px

    &__list
        display: flex
        justify-content: space-between

    &__item
        width: 75px
        text-align: center
        font-weight: regular
        font-size: 14px

        span
            display: block
            margin-top: 10px

        .owl-carousel &
            margin: 0 auto

    .owl-buttons
        display: block

    .categories
        background: none

        .a--0
            display: block
            padding: 0
            height: auto
            color: color1_bg
            text-align: center
            text-transform: none
            white-space: normal
            font-weight: regular
            font-size: 14px

            img
                margin-right: 0
                max-height: none
                width: 60px
                height: 60px
                object-fit: contain

            span
                display: block
                padding-top: 5px
                min-width: 0
                max-width: 100%
                line-height: 1.2

            &:hover
                background: none
                color: color1_bg

        .owl-prev, .owl-next
            top: 50%
            transform: translateY(-50%)

        .owl-item
            display: flex
            justify-content: center
            align-items: flex-start

    @media (max-width: 992px)
        display: none