.modal
    display: flex
    justify-content: center
    align-items: center

    &__box
        position: relative
        top: auto
        left: auto
        padding: 70px 20px 20px
        box-shadow: inset 0 50px 0 color1_bg
        transform: translate3d(0, 100%, 0)

    &__close
        top: 0
        bottom: auto
        height: 50px
        border-radius: 0
        background: none

        &:before
            display: none

        .ico
            width: 14px
            height: 14px

        &:hover
            background: none

    &.active
        .modal__box
            transform: translate3d(0, 0, 0)