.header
    margin-bottom: 0 !important
    padding: 18px 0

    > *
        order: 1

    &-container
        position: sticky
        top: 0

    @media (max-width: 992px)
        flex-wrap: wrap

        .scrolling &-container
            background: #EFEFEF

        .scrolling &
            padding: 10px 0

    @media (min-width: 993px)
        position: relative
        z-index: 100
        background: #fff
        box-shadow: 800px 0 0 #fff, -800px 0 0 #fff
        transition: all .2s ease

        &-container
            background: none
            box-shadow: none

        .scrolling &
            margin-top: -30px
            padding: 10px 0
