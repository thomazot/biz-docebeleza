.categories
    .header-container > &__show
        display: none

    .header-container &
        .a--1, .a--2
            img, svg
                display: none

    &__show
        background: none
        color: color1_bg

        .ico
            width: 33px
            height: 33px

        &:before
            display: none

        &:hover
            background: none
            color: color1_bg

    &__hide
        background: none
        color: color1_bg

        &:before
            display: none

        .ico
            width: 12px
            height: 12px

        &:hover
            background: none
            color: color1_bg

    @media (max-width: 992px)
        .scrolling &__show
            order: 2
            margin-right: 0
            margin-left: 16px

@media (max-width: 992px)
    .categories
        background: #fff

        &:before
            position: absolute
            top: 0
            left: 0
            padding-top: 18px
            padding-left: 30px
            color: #00A3D3
            content: 'Categorias'
            font-weight: regular
            font-size: 18px

        .header-container &
            .all-a--0, .all-a--1
                img, svg
                    display: none

        &__hide
            position: absolute
            top: 0
            right: 0

        &--mobi
            padding-top: 60px !important

            .all-a
                &--0, &--1
                    padding-left: 30px
                    color: color1_bg
                    font-weight: regular
                    font-size: 14px

                &--0
                    padding-right: 50px

                &--1
                    &:before
                        margin-right: 10px
                        content: url(sub)

            .all-li
                &--0
                    background: #EFEFEF
                    box-shadow: none

                    &:nth-child(EVEN)
                        background: #E6E6E6

                &--1
                    box-shadow: none

            .all-ul
                &--1
                    background: #fff

        .all-ul--2
            display: none

        .all-li--0.parent
            position: relative

            > ul
                display: none

            &:after
                content: ''

            > a
                display: flex
                justify-content: flex-start
                align-items: center
                min-height: 37px

            &:after
                position: absolute
                top: 0
                right: 0
                z-index: 10
                display: flex
                justify-content: center
                align-items: center
                width: 48px
                height: 48px
                background: none
                content: '+'
                font-size: 24px
                line-height: 1
                transition: all .2s ease

            &.on
                &:after
                    content: '-'

                > ul
                    display: block

        .all-li--0
            padding-bottom: 0

@media (min-width: 993px)
    .categories
        margin-bottom: 0 !important
        transition: all .2s ease

        &__block
            flex: 0 0 280px
            width: 280px
            border-left: 0

        .a--0
            text-transform: uppercase
            white-space: nowrap
            font-weight: regular
            font-size: 12px

            > span
                display: flex
                justify-content: space-between
                align-items: center

        .a--1
            &:hover
                box-shadow: none
                color: color1_bg
                text-decoration: underline

        &--justify
            .li--0
                position: static

            .box--1
                align-items: center
                width: 100%

            .ul--1
                display: grid
                flex: 1
                padding: 20px
                min-width: 600px
                min-width: 0
                max-width: none
                grid-template-columns: 1fr 1fr

        &__all
            .a--0
                padding-right: 15px
                padding-left: 15px
                border-right: solid 1px rgba(255, 255, 255, .2)
                border-left: solid 1px rgba(255, 255, 255, .2)

                .z-menu
                    margin-right: 5px
                    width: 18px
                    height: 18px

                .z-down
                    margin-left: 5px
                    width: 10px
                    height: 5px

            .all
                &-ul
                    &--0
                        position: static
                        overflow: visible
                        padding: 20px
                        max-height: none
                        width: 250px
                        box-shadow: 0 0 20px rgba(0, 0, 0, .1)

                    &--1
                        position: absolute
                        top: 0
                        right: 0
                        bottom: 0
                        left: 250px
                        display: none
                        align-content: start
                        overflow-x: visible
                        overflow-y: auto
                        padding: 20px
                        grid-template-columns: 1fr 1fr

                    &--2, &--3
                        display: none

                &-li
                    &--0
                        margin-left: -20px
                        padding: 0 0 0 20px

                        &:hover
                            background: #EFEFEF

                            .all-ul--1
                                display: grid

                            .all-a--0:before
                                opacity: 1

                &-a
                    &--0
                        position: relative
                        padding-right: 40px
                        font-weight: semibold
                        font-size: 14px

                        &:hover
                            box-shadow: none

                        &:before
                            position: absolute
                            top: 0
                            right: 0
                            display: flex
                            justify-content: center
                            align-items: center
                            width: 40px
                            height: 100%
                            content: url(next)
                            opacity: 0

                    &--1
                        padding: 10px 0
                        color: color1_bg
                        font-weight: regular
                        font-size: 14px

                        &:hover
                            box-shadow: none
                            text-decoration: underline

        .scrolling:not(.scrolling--up) .header-container &
            margin-top: -43px
            pointer-events: none

    .header-container .categories .a--0 img
        display: none

#especialista-em-cabelos
    .categories .li--0:hover .a--0
        background: none !important

.catalog-category-view .wrapper > .categories
    display: none