.mycart
    .header &
        margin-left: 0 !important

    &--open
        overflow: hidden !important
        height: 100%

        .mycart
            &:before
                visibility: visible
                opacity: 1

    &:before
        position: fixed
        top: 0
        left: 0
        z-index: 150
        visibility: hidden
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, .3)
        content: ''
        opacity: 0
        transition: all .2s ease

    &__remove
        right: 0
        left: auto
        display: flex
        justify-content: flex-end
        align-items: flex-start
        padding: 0
        width: 48px
        height: 48px
        color: #999

    &__header
        a
            position: relative
            display: flex
            justify-content: center
            align-items: center
            width: 50px
            height: 50px

        .ico
            margin-top: -8px
            width: 31px
            height: 33px
            color: color2_bg

            svg
                stroke: black

        .qtd
            position: absolute
            bottom: 14px
            left: 50%
            display: flex
            justify-content: center
            align-items: center
            width: 14px
            height: 14px
            border-radius: 50%
            background: #268800
            color: #fff
            font-weight: regular
            font-size: 10px
            transform: translateX(-50%)

    &__content
        position: fixed
        top: 0
        right: 0
        z-index: 200
        padding: 0 50px
        max-width: 100%
        width: 600px
        height: 100%
        background: #ffffff
        box-shadow: 0 0 10px rgba(0, 0, 0, .1)
        transition: all .2s ease
        transform: translateX(100%)

        .mycart--open &
            transform: translateX(0)

    &__head
        display: flex
        justify-content: space-between
        align-items: stretch
        margin: 0 -50px 20px
        padding: 0 50px
        height: 50px
        background: color1_bg
        color: #fff
        font-weight: regular
        font-size: 16px

    &__title
        display: flex
        align-items: center

        .ico
            margin-right: 15px
            width: 9px
            height: 15px

    &__info
        display: flex
        align-items: center
        color: color2_bg
        font-weight: bold

        span
            margin: 0 3px

        .ico
            width: 7px
            height: 12px

        a
            display: flex
            justify-content: center
            align-items: center
            margin-left: 10px
            width: 46px
            height: 32px
            border-radius: 32px
            background: color2_bg
            color: #fff

    &__details
        display: flex
        flex-flow: column nowrap

        .price
            order: -1
            font-weight: regular
            font-size: 12px

        .mycart
            &__qtd
                display: none

            &__name
                line-height: 1

                a
                    color: color1_bg
                    font-weight: regular
                    font-size: 12px
                    line-height: 1

    &__item
        border-color: #ccc

    &__totals
        display: flex
        justify-content: space-between
        align-items: center
        padding: 15px 20px
        border-radius: 2px
        background: #EFEFEF

        .title
            margin: 0
            color: #268800
            font-weight: bold
            font-size: 16px

            &:before
                content: 'Total do Carrinho:'

            span
                display: none

        .price-box-parcelado
            display: none

        .regular-price
            .label
                display: none

            .price
                color: #268800
                font-weight: bold
                font-size: 16px

    &__actions
        justify-content: space-between
        margin: 0
        padding-top: 30px

        .finalizar
            display: none

        .editar
            display: flex
            flex: 0
            justify-content: center
            align-items: center
            min-width: 225px
            height: 45px
            border-radius: 45px
            background: color2_bg
            color: #fff
            text-transform: uppercase
            font-weight: regular
            font-size: 18px

            &:before
                content: 'Continuar'

            span
                display: none

            .ico
                margin-left: 10px

            &:hover
                background: color2_bg

    &__close
        width: 97px
        border-radius: 45px
        background: #50D6FD
        box-shadow: none
        color: #fff
        text-transform: uppercase
        font-weight: regular
        font-size: 18px

        &:hover
            background: #50D6FD

    @media (max-width: 992px)
        body:not(.scrolling) &__header
            display: none

        .scrolling &
            order: 5

        &__label-qtd
            display: none

        &__head
            margin-right: -20px
            margin-left: -20px
            padding: 0 20px

        &__title
            min-width: 50px
            font-size: 0

        &__content
            padding: 0 20px

        &__actions
            .editar
                min-width: auto