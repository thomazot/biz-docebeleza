.about
    padding: 40px 0 0

    &__image
        img
            min-width: 100%
            object-fit: cover

    &__title
        padding-bottom: 15px
        text-transform: uppercase
        font-weight: light
        font-size: 20px

    &__content
        p
            font-weight: regular
            font-size: 16px
            line-height: 1.4

            + p
                margin-top: 15px

    @media (max-width: 992px)
        &__content
            padding: 15px 0

    @media (min-width: 993px)
        &__container
            display: flex
            align-items: center

        &__image
            flex: 0 1 586px

        &__content
            flex: 1
            padding: 0 15px
            min-width: 0