.reviews
    background: #EFEFEF

    .amount
        text-decoration: underline
        font-weight: regular
        font-size: 16px

    .reviews__title
        padding-top: 20px
        color: #00A3D3
        text-align: center
        font-weight: regular
        font-size: 18px

        &:before
            content: 'Avaliações'

        span
            display: none

    .product-rate
        .percent
            height: 125px

            .text
                font-size: 30px

    .subtitle
        display: none

    &__content
        display: block

    &__add
        margin: 0

    &__resume, &__add, &__ratings
        border: 0
        background: none
        box-shadow: none

    .std
        color: #707070
        font-weight: regular
        font-size: 14px

    .title
        font-weight: regular
        font-size: 14px

    &__add
        .btn
            display: flex
            justify-content: center
            align-items: center
            margin: 0 auto
            padding: 0
            width: 160px
            height: 40px
            border-radius: 40px
            background: #15B0DE
            color: #fff
            text-transform: uppercase
            font-size: 16px

    @media (min-width: 993px)
        box-shadow: 800px 0 0 #EFEFEF, -800px 0 0 #EFEFEF

        &__list
            max-height: none
            column-gap: 40px
            column-rule: 1px solid #CCCCCC
            column-count: 2
